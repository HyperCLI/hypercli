# HyperCLI Environment Variables
# Copy this file to .env.local and fill in your values

# Site URLs
NEXT_PUBLIC_MAIN_SITE_URL=http://localhost:4000
NEXT_PUBLIC_CONSOLE_URL=http://localhost:4001
NEXT_PUBLIC_CHAT_URL=http://localhost:4002

# Cookie Configuration
NEXT_PUBLIC_COOKIE_DOMAIN=localhost
NEXT_PUBLIC_COOKIE_VALIDITY=15

# Turnkey Configuration
NEXT_PUBLIC_ORGANIZATION_ID=
NEXT_PUBLIC_AUTH_PROXY_CONFIG_ID=
NEXT_PUBLIC_BASE_URL=https://api.turnkey.com
NEXT_PUBLIC_AUTH_PROXY_URL=https://authproxy.turnkey.com

# Google OAuth
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=

# C3 API Key (server-side only - used by chat app for LLM calls)
# This routes through non-OpenRouter providers (Nebius, Chutes, DeepInfra)
C3_API_KEY=

# Google Gemini API Key (FREE tier: 60 RPM, 1M tokens/day)
# Get yours at: https://aistudio.google.com/apikey
# Used by the chat app for conversation (no cost to HyperCLI org)
GEMINI_API_KEY=

# API URLs
NEXT_PUBLIC_INSTANCES_API_URL=https://api.hypercli.dev/instances
NEXT_PUBLIC_WS_URL=wss://api.hypercli.dev/orchestra/ws
NEXT_PUBLIC_LLM_API_URL=https://api.hypercli.dev/v1
NEXT_PUBLIC_BOT_API_URL=https://api.hypercli.dev/agent/api
NEXT_PUBLIC_AUTH_BACKEND=https://api.hypercli.dev/api
NEXT_PUBLIC_API_BASE=https://api.hypercli.dev/api
NEXT_PUBLIC_CORS_PROXY_URL=http://localhost:8080

# Debug
NEXT_PUBLIC_AUTH_DEBUG=true

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# HyperClaw
NEXT_PUBLIC_CLAW_URL=http://localhost:4003
NEXT_PUBLIC_PRIVY_APP_ID=
NEXT_PUBLIC_CLAW_API_URL=http://localhost:8000
